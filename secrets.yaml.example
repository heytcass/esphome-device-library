# Copy this file to secrets.yaml and fill in your values
# secrets.yaml is gitignored and will not be committed

wifi_ssid: "YourWiFiSSID"
wifi_password: "YourWiFiPassword"
api_encryption_key: "your-32-char-base64-api-key"
ota_password: "your-ota-password"
ap_password: "your-fallback-ap-password"

# Generate API encryption key with:
# esphome dashboard
# (Look for auto-generated key in logs)

# Optional: Static IP Network Configuration
# Only needed if you include the static-ip.yaml package
# Uncomment and configure these if mDNS (.local) resolution fails on your network
#
# Note: The device-specific IP address should be defined in substitutions in each
# device config, not here. These are network-wide settings shared by all devices.
# DNS servers are optional - devices will use default DNS if not specified.
#
# wifi_gateway: "192.168.1.1"       # Your router's IP address
# wifi_subnet: "255.255.255.0"      # Subnet mask (usually 255.255.255.0)
